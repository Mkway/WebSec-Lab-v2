{
    "name": "websec-lab/php-server",
    "description": "WebSec-Lab v2 PHP Vulnerability Testing Server",
    "type": "project",
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "ext-mysqli": "*",
        "ext-redis": "*",
        "ext-curl": "*",
        "ext-json": "*",
        "monolog/monolog": "^3.0",
        "predis/predis": "^2.0",
        "vlucas/phpdotenv": "^5.5",
        "zircote/swagger-php": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "WebSecLab\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WebSecLab\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=PSR12 src/",
        "format": "phpcbf --standard=PSR12 src/",
        "analyze": "phpstan analyse src/ --level=8"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}