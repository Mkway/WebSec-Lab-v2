# WebSec-Lab PHP Server Environment Configuration

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_NAME="WebSec-Lab PHP Server"

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=websec_php
DB_USER=websec
DB_PASS=websec123

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# Security Settings
JWT_SECRET=your-secret-key-here
BCRYPT_ROUNDS=12

# File Upload Settings
UPLOAD_PATH=/var/shared/uploads
MAX_FILE_SIZE=10485760

# Logging Configuration
LOG_LEVEL=debug
LOG_PATH=/var/log/websec-php.log

# External Services
EXTERNAL_API_URL=http://dashboard
EXTERNAL_API_KEY=your-api-key-here

# Development Settings
XDEBUG_ENABLED=true
PROFILING_ENABLED=false